  id="generic.button"
  x="0" y="0"
  image="generic.button"
  action="play"
 />

 <layer
  id="hover.layer"
  x="0" y="0"
  ghost="1"
  alpha="0"
 />

 <script id="xui.hovertbuttons.scriptfile" file="scripts/xuiTbuttonH.maki"/>
 </groupdef>