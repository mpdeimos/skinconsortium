<groupdef id="hoverGlow.button" xuitag="Vortex:GlowButton" embed_xui="generic.button">
 <button
  id="generic.button"
  x="0" y="0"
  image="generic.button"
  action="play"
 />

 <layer
  id="hover.layer"
  x="0" y="0"
  ghost="1"
  alpha="0"
 />

 <script id="xui.hoverbuttons.scriptfile" file="scripts/xuiButtonH.maki"/>
 </groupdef>

 <groupdef id="hoverGlow.toggleButton" xuitag="Vortex:GlowTbutton" embed_xui="generic.button">
