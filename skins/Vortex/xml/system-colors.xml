<!--

  system-colors.xml

  this file contains all the static color definitions for Wasabi. An objects that does not rely on a group will use
  one of these elements to decide what color to use.

-->

<elements>

  <!-- Generic colors for usage --><!-- Placed at the first for protecting overrides -->
  <color id="white" value="255,255,255"/>
  <color id="black" value="0,0,0"/>
  <color id="red" value="255,0,0"/>
  <color id="blue" value="0,0,255"/>
  <color id="green" value="0,255,0"/>
  <color id="yellow" value="255,255,0"/>
  <color id="cyan" value="0,255,255"/>
  <color id="pink" value="255,0,255"/>
  <!-- End Of Generic colors for usage -->

  <!-- Warp custom colors -->
  <color id="font.generic" value="0,0,0" gammagroup="Text"/>
  <color id="font.songticker" value="255,255,255" gammagroup="Text_songticker"/>
  <color id="font.timer" value="0,0,0" gammagroup="Text_timer"/>
  <color id="font.title" value="0,0,0" gammagroup="Text_title"/>
  <color id="font.display" value="46,189,210" gammagroup="Glass2"/>
  <color id="font.clock" value="178,116,28" gammagroup="Background"/>

  <!-- wasabi colors -->
  <color id="white" value="font.display" gammagroup="Glass"/> <!-- hehe, overrides the white id to black. yah a bit confusing -->
  <color id="wasabi.text.color" value="font.display" gammagroup="Glass"/>
  <color id="wasabi.tooltips.textcolor" value="0,0,0" gammagroup="Text" />
  <color id="abouttext" value="0,0,0" gammagroup="Text"/>

<!-- Generic Trees -->
  <color id="wasabi.tree.text" value="font.display" gammagroup="glass"/> <!-- Item text color -->
  <color id="wasabi.tree.selected" value="23,95,105" gammagroup="glass"/> <!-- Select item text background color -->

  <!-- Generic Lists -->
  <color id="wasabi.list.text" value="font.display" gammagroup="glass"/> <!--lists/trees item foreground (also edit text) -->
  <color id="wasabi.list.background" value="14,2,3" gammagroup="ListBackground"/>  <!--lists/trees item background (also bg for edit) -->

  <color id="wasabi.list.text.selected" value="font.display" gammagroup="glass"/> <!--listview/treeview selection bar text color -->
  <color id="wasabi.list.text.selected.background" value="23,95,105" gammagroup="glass"/> <!--listview/treeview selection bar backcolor -->
  <color id="studio.list.item.selected" value="23,95,105" gammagroup="glass"/>
  <color id="studio.list.item.focused" value="23,95,105" gammagroup="glass"/>

  <color id="wasabi.list.text.current" value="250,250,250" gammagroup="glass"/> <!-- currently playing item in lists -->
  <color id="wasabi.list.text.selected.inactive" value="font.display" gammagroup="glass"/> <!-- listview/treeview selection bar textcolor (inactive) -->
  <color id="wasabi.list.text.selected.background.inactive" value="23,95,105" gammagroup="glass"/> <!-- listview/treeview selectionbar back color (inactive) -->

  <color id="wasabi.list.column.background" value="67,65,66" gammagroup="Background"/> <!-- listview header background color -->
  <color id="wasabi.list.column.text"  value="font.display" gammagroup="glass"/> <!-- listview header text color -->
  <color id="wasabi.list.column.frame.top"  value="87,85,86" gammagroup="Background"/> // listview header frame top color
  <color id="wasabi.list.column.frame.middle" value="60,60,60" gammagroup="Background"/> // listview header frame middle color
  <color id="wasabi.list.column.frame.bottom"  value="57,55,56" gammagroup="Background"/> // listview header frame bottom color
  <color id="wasabi.list.column.empty"  value="77,75,76" gammagroup="Background"/> // listview header empty color (beyond the columns

  <!-- edit wnds -->
  <color id="wasabi.window.background" value="77,75,76" gammagroup="Background"/> <!--ML WINDOW BORDERS RALPHwindow background. -  If this color is not defined, a whole container is created in memory to extract a pixel, so specifying it makes skin loading faster -->
  <color id="wasabi.window.text" value="font.display" gammagroup="glass"/> <!--text color within windows -->
  <color id="wasabi.border.sunken" value="50,50,50" gammagroup="Backgrounds"/> // color of dividers and sunken borders
  <color id="wasabi.text" value="255,0,0"/>

  <color id="wasabi.scrollbar.foreground" value="50,50,50" gammagroup="ListBackground"/> <!-- scrollbar foreground color -->
  <color id="wasabi.scrollbar.background" value="0,0,0" gammagroup="ListBackground"/> <!-- scrollbar background color -->
  <color id="wasabi.scrollbar.foreground.inverted" value="0,0,0" gammagroup="ListBackground"/> <!-- inverse scrollbar foreground color -->
  <color id="wasabi.scrollbar.background.inverted" value="0,0,0" gammagroup="ListBackground"/> <!-- inverse scrollbar background color -->

  <color id="wasabi.button.text" value="font.display" gammagroup="glass"/> <!-- Buttons text color -->
  <color id="wasabi.button.hiliteText" value="font.display" gammagroup="glass"/> <!-- Buttons hilite text color, used by tab windows-->
  <color id="wasabi.button.dimmedText" value="font.display" gammagroup="glass"/> <!-- Buttons dimmed text color, when disabled -->

</elements>

