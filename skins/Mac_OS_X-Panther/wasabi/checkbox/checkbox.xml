<groupdef id="wasabi.checkbox.group" h="18" autowidthsource="checkbox.text">

  <!-- DO NOT CHANGE THESE IDS!! -->
  <group
    id="wasabi.objectframe.group"
    x="2" y="4"
    w="11" h="11" alpha="0"
  />
  <ToggleButton
    id="checkbox.toggle"
    x="0" y="1" 
    image="wasabi.button.checkbox"
    activeImage="wasabi.button.checkbox.active"
    downImage="wasabi.button.checkbox.pressed"
    rectrgn="1"
  />

  <Wasabi:Text 
    id="checkbox.text"
    default="ERROR"
    x="15" y="2"
    w="-15" h="14"
    relatw="1" wrap="1"
  />

</groupdef>

<groupdef id="wasabi.radiobutton.group" h="18" autowidthsource="checkbox.text">

  <!-- DO NOT CHANGE THESE IDS!! -->
  <layer 
    id="radio.background"
    image="clear"
    x="2" y="4"
  />
  <layer 
    id="radio.background.display"
    image="clear"
    x="3" y="5"
  />
  <togglebutton
    id="checkbox.toggle"
    x="0" y="2" 
    image="wasabi.button.radio"
    downImage="wasabi.button.radio.pressed"
    activeImage="wasabi.button.radio.active"
    rectrgn="1"
  />
  <Wasabi:Text 
    id="checkbox.text"
    default="ERROR"
    x="15" y="1"
    w="-15" h="14"
    relatw="1" wrap="1"
  />

</groupdef>