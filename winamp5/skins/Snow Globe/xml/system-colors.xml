<!--

  system-colors.xml

  this file contains all the static color definitions for Wasabi. An objects that does not rely on a group will use
  one of these elements to decide what color to use.

-->


<elements>

  <!-- Warp custom colors -->
  <color id="font.generic" value="0,0,0" gammagroup="Text"/>
  <color id="font.songticker" value="255,255,255" gammagroup="Text_songticker"/>
  <color id="font.timer" value="0,0,0" gammagroup="Text_timer"/>
  <color id="font.title" value="0,0,0" gammagroup="Text_title"/>
  <color id="font.display" value="255,255,255" gammagroup="Display"/>
  <color id="font.clock" value="127,127,127" gammagroup="Clock_Text"/>

  <!-- wasabi colors -->
  <color id="white" value="0,0,0" gammagroup="Text"/> <!-- hehe, overrides the white id to black. yah a bit confusing -->
  <color id="wasabi.text.color" value="0,0,0" gammagroup="Text"/>
  <color id="wasabi.tooltips.textcolor" value="0,0,0" gammagroup="Text" />
  <color id="abouttext" value="0,0,0" gammagroup="Text"/>

  <!-- Generic Lists -->
  <color id="wasabi.list.text" value="150,150,150" gammagroup="base"/> <!--lists/trees item foreground (also edit text) -->
  <color id="wasabi.list.background" value="14,2,3" gammagroup="base"/>  <!--lists/trees item background (also bg for edit) -->

  <color id="wasabi.list.text.selected" value="50,150,50" gammagroup="base"/> <!--listview/treeview selection bar text color -->
  <color id="wasabi.list.text.selected.background" value="50,50,50" gammagroup="base"/> <!--listview/treeview selection bar backcolor -->
  <color id="studio.list.item.selected" value="50,50,50" gammagroup="base"/>
  <color id="studio.list.item.focused" value="50,50,50" gammagroup="base"/>

  <color id="wasabi.list.text.current" value="187,210,255" gammagroup="base"/> <!-- currently playing item in lists -->
  <color id="wasabi.list.text.selected.inactive" value="214,228,255" gammagroup="base"/> <!-- listview/treeview selection bar textcolor (inactive) -->
  <color id="wasabi.list.text.selected.background.inactive" value="103,136,201" gammagroup="base"/> <!-- listview/treeview selectionbar back color (inactive) -->

  <color id="wasabi.list.column.background" value="204,208,217" gammagroup="base"/> <!-- listview header background color -->
  <color id="wasabi.list.column.text" value="0,0,0" gammagroup="base"/> <!-- listview header text color -->
  <color id="wasabi.list.column.frame.top" value="246,246,248" gammagroup="base"/> // listview header frame top color
  <color id="wasabi.list.column.frame.middle" value="142,150,163" gammagroup="base"/> // listview header frame middle color
  <color id="wasabi.list.column.frame.bottom" value="0,0,0" gammagroup="base"/> // listview header frame bottom color
  <color id="wasabi.list.column.empty" value="142,150,163" gammagroup="base"/> // listview header empty color (beyond the columns

  <!-- edit wnds -->
  <color id="wasabi.window.background" value="140,147,155" gammagroup="base"/> <!--ML WINDOW BORDERS RALPHwindow background. -  If this color is not defined, a whole container is created in memory to extract a pixel, so specifying it makes skin loading faster -->
  <color id="wasabi.window.text" value="200,200,200" gammagroup="base"/> <!--text color within windows -->
  <color id="wasabi.border.sunken" value="204,208,217" gammagroup="base"/> // color of dividers and sunken borders
  <color id="wasabi.text" value="255,0,0"/>

  <color id="wasabi.scrollbar.foreground" value="50,50,50" gammagroup="base"/> <!-- scrollbar foreground color -->
  <color id="wasabi.scrollbar.background" value="0,0,0" gammagroup="base"/> <!-- scrollbar background color -->
  <color id="wasabi.scrollbar.foreground.inverted" value="0,0,0" gammagroup="base"/> <!-- inverse scrollbar foreground color -->
  <color id="wasabi.scrollbar.background.inverted" value="0,0,0" gammagroup="base"/> <!-- inverse scrollbar background color -->

  <color id="wasabi.button.text" value="0,0,0" gammagroup="ButtonText"/> <!-- Buttons text color -->
  <color id="wasabi.button.hiliteText" value="0,0,0" gammagroup="ButtonText"/> <!-- Buttons hilite text color, used by tab windows-->
  <color id="wasabi.button.dimmedText" value="149,156,169" gammagroup="ButtonText"/> <!-- Buttons dimmed text color, when disabled -->

</elements>
